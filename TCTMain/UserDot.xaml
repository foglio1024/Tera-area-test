<UserControl x:Class="TCTMain.UserDot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCTMain"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="5" Height="5" RenderTransformOrigin=".5, .5" Opacity="1">
        <Ellipse Name="ell" Fill="CadetBlue" Stroke="Transparent"></Ellipse>
        <Rectangle Stroke="White" Fill="White" StrokeThickness="1" Width="1" Height="2" VerticalAlignment="Top" Name="r" ></Rectangle>
        <Ellipse Name="d" Height="2" Width="2" Fill="White" Visibility="Hidden"/>
    </Grid>

</UserControl>
